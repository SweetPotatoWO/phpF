    public function addInvite() {
        $data = I('post.par');
        $userPhone = $data['userPhone'];  //邀请人电话
        $invitePhone = $data['invitelPhone']; //被邀请人电话
        if (empty($userPhone) || empty($invitePhone)) {
            $this->jsonReturn(0, "信息填充不完整");
        }
        $invite = new Logic\UserInviteLogic();    //查询是否存在邀请记录了
