        foreach ($title as $key => $item) {
            $title[$key] = iconv('utf-8', 'GBK', $item);
        }
        fputcsv($fp, $title);
        $arr = array();
        foreach ($data as $value) {
            foreach ($value as $keys => $info) {
                $arr[$keys] = iconv('utf-8', 'GBK', $info);
            }
            fputcsv($fp, $arr);
        }
        fclose($fp);
        $this->jsonReturn(1, "导出成功，请点击Dowonload下载", $fileName);
    }

