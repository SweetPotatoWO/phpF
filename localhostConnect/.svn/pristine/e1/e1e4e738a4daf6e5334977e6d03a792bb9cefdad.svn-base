.container{max-width: 1200px !important;}
.fl {float: left;}
.fr {float: right;}
a:hover, a:focus, a:active {outline: none;text-decoration: none;}
.navigation {float: right;}
.navigation ul {margin-bottom: 0;}
.navigation li {display: inline-block;}
.navigation li:nth-child(2) {margin-left: 46px;}
.navigation li a {display: inline-block;font-size: 28px;color: #fff;text-align: center;border: 1px solid #fff;border-radius: 26px;padding: 4px 27px;}
.navigation li.active a {background: #477bff;border: 1px solid #477bff;}
footer {color:#353b51;font-size:20px;background: #f2f4fa;height: 140px;}
footer a {color:#353b51;}
footer h4 {font-size: 20px;padding-top: 36px;padding-bottom: 20px;margin-bottom: 0;}
.index .banner {width: 100%;height: 1080px;background: url(/Public/frontend/images/home/banner-01.png) no-repeat center top;padding-top: 46px;}
.index .banner h2 {color: #fff;font-weight: bold;font-size: 45px;padding-top: 200px;line-height: 72px;margin-bottom: 0;padding-bottom: 100px;}
.index .banner .qr-code {width: 355px;height: 341px;background: url(/Public/frontend/images/home/qr-code.png) no-repeat;}
.index .banner .download {display: block;width: 284px;height: 102px;}
.index .banner .download-btn {padding: 168px 0 0 78px;}
.index .banner .download.android {background: url(/Public/frontend/images/home/andriod.png) no-repeat;}
.index .banner .download.ios {background: url(/Public/frontend/images/home/iphone.png) no-repeat;}
.index .section .text {padding-top: 200px;}
.index .section .text h3 {color: #353b51;font-size: 48px;font-weight: bold;margin-bottom: 0;padding-bottom: 110px;}
.index .section .text p {color: #94969e;font-size: 28px;}
.index .section-1 {padding: 244px 0 92px 0;}
.index .section-1 .img {width:374px;height:744px;background: url(/Public/frontend/images/home/ct-01.png) no-repeat;}
.index .section-2 {background: #f2f4fa;padding: 238px 0 122px 0;}
.index .section-2 .img {width:363px;height:720px;background: url(/Public/frontend/images/home/ct-02.png) no-repeat;}
.index .section-3 {padding: 116px 0 92px 0;}
.index .section-3 .img {width:368px;height:731px;background: url(/Public/frontend/images/home/ct-03.png) no-repeat;}

/*about*/
.about .banner {width: 100%;height: 1080px;background: url(/Public/frontend/images/home/banner-02.png) no-repeat center top;padding-top: 46px;}
.about .banner p {color: #fff;font-size: 36px;padding: 346px 0 0 452px;}
.about .aboutUs {padding-bottom: 112px;}
.about .aboutUs h2 {text-align: center;color: #353b51;font-size: 60px;font-weight: bold;padding: 86px 0 70px 0;}
.about .aboutUs .text {color: #fff;width:894px;padding: 30px 0 0 30px;}
.about .aboutUs .text h5 {font-size: 28px;font-weight: bold;margin-bottom: 20px;}
.about .aboutUs .text p {font-size: 24px;line-height: 50px;text-align: justify;}
.about .aboutUs .partner {height:266px;background: #477bff;border-radius: 12px;overflow: hidden;}
.about .aboutUs .partner1 {margin-bottom: 66px;}
.about .aboutUs .partner1 .img {width: 254px;height: 100%;background: url(/Public/frontend/images/home/tx-02.jpg) no-repeat center center;background-size: 100% 100%;}
.about .aboutUs .partner2 .img {width: 254px;height: 100%;background: url(/Public/frontend/images/home/tx-02.png) no-repeat;}
